<br />

<div class="booyah-box col-10 offset-1">
  <h1>Your Enrolled Course</h1>
  <% current_user.enrolled_courses.each do |course| %>
    <div class="booyah-box col-10 offset-1">
      <div class="row">
        <div class="col-12 col-md-9">
          <h3 class="offset-1">
            <%= link_to course.title, course_path(course) %>
          </h3>
          <br />
        </div>
        <div class="col-12 col-md-3 text-center">
          <%= link_to "More Info...", course_path(course), class: 'btn btn-primary' %>
        </div>
      </div> 
      <div class="text-center">   
        <% if course.image.present? %>
          <%= image_tag course.image, class: 'img-fluid' %>
        <% end %>
        <br />
        <div class="row">
          <div class="col-12 col-sm-8">
            <%= course.description %>
          </div>
        </div>
      </div>   
    </div>    
  <br class="clr" />    
  <% end %>

  <h1>Your Lecturing Course</h1>
  <% current_user.courses.each do |course| %>
    <div class="booyah-box col-10 offset-1">
      <div class="row">
        <div class="col-12 col-md-9"> 
          <h3 class="text-left offset-1">
            <%= link_to course.title, course_path(course) %>
          </h3>
        </div>
        <div class="col-12 col-md-3 text-center">
            <%= link_to "More Info...", course_path(course), class: 'btn btn-primary' %>
        </div>
      </div>
      <br />
      <div class="text-center">
        <% if course.image.present? %>
          <img src="<%= course.image.url %>" class="img-fluid img-thumbnail">
        <% end %>
      </div>
      <br />
      <div class="row">
        <div class="col-12 col-sm-8 text-left offset-2">
          <%= course.description %>
        </div>
      </div>  
    </div>  
    <br class="clr" />
  <% end %>
</div>