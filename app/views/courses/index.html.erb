<br />

<div class="booyah-box col-10 offset-1">
  <h1 class="text-center">Learn something today</h1>
  <hr />

  <% @courses.each do |course| %>
    <div class="booyah-box">
      <h2 class="text-center">
        <%= link_to course.title, course_path(course) %>
        <%= link_to 'More Details...', course_path(course), class: 'btn btn-primary btn-large float-right' %>
      </h2>
      <br class="clr" />
      <div class="text-center">
        <% if course.image.present? %>
          <img src="<%= course.image.url %>" class="img-fluid img-thumbnail">
        <% end %>
      </div>
    
      <br \>
      <p class="booyah-box col-10 offset-1"><%= course.description %></p>
    </div>
    <br class="clr" />
  <% end %>
</div>